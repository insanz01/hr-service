[flake8]
max-line-length = 88
extend-ignore =
    E203,  # whitespace before ':' (black compatibility)
    E501,  # line too long (black compatibility)
    W503,  # line break before binary operator (black compatibility)
    F401,  # imported but unused
    F811,  # redefinition of unused name
    E402,  # module level import not at top of file
    F403,  # 'from .import *' used; unable to detect undefined names
    F405,  # name may be undefined, or defined from star imports
    E722,  # do not use bare except
    E722,  # do not use bare except
    E401,  # import does not start at line beginning
    E731,  # do not assign a lambda expression, use a def
    E741,  # ambiguous variable name
    E742,  # ambiguous class definition
    E743,  # ambiguous function definition
    E711  # assignment to attribute before definition
ignore =
    E203,
    E501,
    W503,
    F401,
    F811,
    E402,
    F403,
    F405,
    E722,
    E722,
    E401,
    E731,
    E741,
    E742,
    E743,
    E711,
    W504,
    W605,
    E402,
    E701,
    E702,
    E704,
    E703,
    E722,
    E741,
    E742,
    E743,
    E711