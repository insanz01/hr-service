# HR Screening System Environment Variables
# Copy this file to .env and fill in your values

# =================================
# AI/LLM Configuration
# =================================

# Google Gemini API Key
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =================================
# Redis Configuration (Optional)
# =================================

# Redis URL (defaults to redis://localhost:6379/0 if not set)
# REDIS_URL=redis://localhost:6379/0

# Redis Backend (defaults to redis://localhost:6379/1 if not set)
# REDIS_BACKEND=redis://localhost:6379/1

# =================================
# Application Configuration
# =================================

# Flask Environment
FLASK_ENV=development
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# =================================
# Logging Configuration
# =================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =================================
# API Configuration
# =================================

# API Host (default: 0.0.0.0)
API_HOST=0.0.0.0

# API Port (default: 5000)
API_PORT=5000

# =================================
# Security Configuration
# =================================

# Secret Key for Flask sessions
SECRET_KEY=your_secret_key_here

# =================================
# File Upload Configuration
# =================================

# Maximum file size for uploads (in MB)
MAX_CONTENT_LENGTH=50

# Allowed file extensions
ALLOWED_EXTENSIONS=pdf,txt,md